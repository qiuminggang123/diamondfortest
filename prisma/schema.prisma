// Prisma schema for NextAuth.js with PostgreSQL (Neon)
// 参考官方文档：https://next-auth.js.org/adapters/prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  resetToken        String?
  resetTokenExpires DateTime?
  id                String   @id @default(cuid())
  name              String?
  email             String? @unique
  emailVerified     DateTime?
  image             String?
  password          String?
  realName          String? // 收件人姓名
  phone             String? // 电话
  address           String? // 地址
  accounts          Account[]
  sessions          Session[]
  addressInfo       Address?
  designs           Design[]
}

model Address {
  id        String  @id @default(cuid())
  userId    String  @unique
  user      User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  realName  String
  phone     String
  address   String
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?
  access_token       String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?
  user               User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// 珠子类别
model BeadCategory {
  id    String  @id @default(cuid())
  name  String
  beads Bead[]
}

// 珠子材质（含价格）
model BeadMaterial {
  id    String  @id @default(cuid())
  name  String
  price Float
  beads Bead[]
}

// 珠子库（单颗珠子定义）
model Bead {
  id         String       @id @default(cuid())
  name       String
  image      String?
  size       Int          // mm
  categoryId String
  materialId String
  dominantColor String?   // 主色调（可选）
  category   BeadCategory @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  material   BeadMaterial @relation(fields: [materialId], references: [id], onDelete: Cascade)
  designBeads DesignBead[]
}

// 设计方案（与用户关联）
model Design {
  id         String       @id @default(cuid())
  name       String
  userId     String
  user       User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  beads      DesignBead[]
  thumb      String?
  circumference Float?
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt
}

// 设计中的珠子实例（顺序/位置/数量等）
model DesignBead {
  id        String   @id @default(cuid())
  designId String
  beadId    String
  x         Float?  // 可选：渲染坐标
  y         Float?
  rotation  Float?
  order     Int      // 顺序
  design    Design   @relation(fields: [designId], references: [id], onDelete: Cascade)
  bead      Bead     @relation(fields: [beadId], references: [id], onDelete: Cascade)
}
